@model IEnumerable<OSRS_TeamProject.Models.InventoryItem>

<h1>OSRS Inventory (MVC)</h1>

<table class="table table-dark table-striped">
    <thead>
        <tr><th>Icon</th><th>ID</th><th>Name</th><th>Qty</th><th>Notes</th></tr>
    </thead>
    <tbody>
        @foreach (var it in (Model ?? Enumerable.Empty<OSRS_TeamProject.Models.InventoryItem>()))
        {
            var icon = string.IsNullOrWhiteSpace(it.IconUrl)
            ? Url.Content("~/img/placeholder-item.svg")
            : it.IconUrl!;
            <tr>
                <td><img src="@icon" alt="" width="24" height="24" style="object-fit:contain" /></td>
                <td>@it.ItemId</td>
                <td>@it.Name</td>
                <td>@it.Quantity</td>
                <td>@it.Notes</td>
            </tr>
        }
    </tbody>
</table>

<p class="mt-3 d-flex gap-2">
    <a class="btn btn-secondary" asp-controller="Home" asp-action="ContactUs">Contact</a>
    <a class="btn btn-secondary" asp-controller="Home" asp-action="Privacy">Privacy</a>
    <a class="btn btn-primary disabled">Add Item (Sprint 3)</a>
</p>
