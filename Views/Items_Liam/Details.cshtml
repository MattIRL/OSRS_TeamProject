@model OSRS_TeamProject.Models.InventoryItem

@{
    ViewData["Title"] = "Details";
}

@section Styles {
    <!-- Silkscreen font -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Silkscreen&display=swap" rel="stylesheet">
    <!-- Liam theme -->
    <link rel="stylesheet" href="~/css/liam.css" asp-append-version="true" />
}

<div class="liam-theme rsfont">
    <h1>Item Details</h1>
    <hr />

    <div class="row g-3 align-items-center mb-3">
        <div class="col-auto">
            @{
                var icon = string.IsNullOrWhiteSpace(Model.IconUrl)
                ? Url.Content("~/img/placeholder-item.svg")
                : Model.IconUrl!;
            }
            <img src="@icon" alt="icon" width="64" height="64"
                 style="object-fit:contain;border:1px solid #0f151c;border-radius:8px;padding:4px;background:#070b10" />
        </div>
        <div class="col">
            <h2 class="h5 m-0">@Model.Name</h2>
            <div class="text-muted">ID: @Model.ItemId</div>
        </div>
    </div>

    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Count</dt>
        <dd class="col-sm-10">@Model.Quantity</dd>

        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>

        <dt class="col-sm-2">Notes</dt>
        <dd class="col-sm-10">@Model.Notes</dd>

        <dt class="col-sm-2">Icon URL</dt>
        <dd class="col-sm-10"><span class="text-muted">@Model.IconUrl</span></dd>
    </dl>

    <div class="mt-3">
        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.ItemId">Edit</a>
        <a class="btn btn-secondary ms-2" asp-action="Index">Back to List</a>
    </div>
</div>
